modules = ["nodejs-20"]
[nix]
channel = "stable-25_05"
packages = ["unzip"]

[agent]
expertMode = true

[deployment]
build = ["bash", "-c", "cd Site-Mirror && npm run build"]
run = ["bash", "-c", "cd Site-Mirror && npm run start"]
deploymentTarget = "autoscale"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Mastra Dev"

[[workflows.workflow]]
name = "Mastra Dev"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd Site-Mirror && npm run dev"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 5000
externalPort = 80
